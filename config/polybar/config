format-connected-padding = ${paddings.outer}
label-connected = %{A1:networkmanager_dmenu:} %signal:2%%%{A}   %downspeed:8%   %upspeed:8%

;---------------------------------------
;	TEMPERATURE MODULE
;---------------------------------------

[module/temperature]
