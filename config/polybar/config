label = %time%
label-padding-left = ${paddings.outer}
label-padding-right = ${paddings.inner}

;---------------------------------------
;	ETHERNET MODULE
;---------------------------------------

[module/eth]
type = internal/network
interface = ens20u1u4
interval = 1

format-connected-background = ${colors.nord2}
format-connected-padding = ${paddings.outer}
label-connected = %{A1:networkmanager_dmenu:} %local_ip%%{A}   %downspeed:8%   %upspeed:8%

;---------------------------------------
;	WI-FI MODULE
;---------------------------------------

[module/wlan]
