label-urgent-foreground = ${colors.nord13}
label-urgent-padding = ${paddings.inner}

label-empty-foreground = ${colors.nord3}
label-empty-padding = ${paddings.inner}

;---------------------------------------
;	POWER MODULE
;---------------------------------------

[module/power]
